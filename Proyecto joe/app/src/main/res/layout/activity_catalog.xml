<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CatalogActivity"
    android:orientation="vertical">
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Productos"
                android:textSize="32sp"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/productosIB"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/perrito2"
                android:scaleType="fitCenter"
                android:backgroundTint="@android:color/white"
                android:background="@drawable/imagebutton_rounded"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Servicios"
                android:textSize="36sp"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/serviciosIB"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/servicios_perritos"
                android:scaleType="centerCrop"
                android:background="@drawable/imagebutton_rounded"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adopciones"
                android:textSize="32sp"
                android:layout_gravity="center"/>

            <ImageButton
                android:id="@+id/adopcionesIB"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/adopciones_perritos"
                android:scaleType="centerCrop"
                android:background="@drawable/imagebutton_rounded"/>


        </LinearLayout>


    </ScrollView>

   







</LinearLayout>